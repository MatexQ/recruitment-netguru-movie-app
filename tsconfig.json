{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2017"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "build",
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@config": ["app/config/config"],
      "@utils": ["app/shared/utils/index"],
      "@models": ["app/database/models/index"],
      "@features/*": ["app/features/*"],
      "@interfaces": ["app/shared/interfaces/index"],
      "@dal": ["app/shared/dal/index"],
      "@middlewares": ["app/shared/middlewares/index"],
      "@customErrors": ["app/shared/custom-errors/index"],
      "@errors": ["app/config/errors"],
      "@helpers": ["app/shared/helpers/index"]
    },
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*"]
}